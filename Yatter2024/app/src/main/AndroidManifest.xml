<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 追加 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".YatterApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bird"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bird"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySplashScreen"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.login.LoginPage"
            android:exported="false"
            android:label="@string/title_activity_login_page"
            android:theme="@style/Theme.MySplashScreen" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MySplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>